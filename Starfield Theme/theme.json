{
    "name": "Starfield Theme",
    "author": "magesty_",
    "target": "System-Wide",
    "manifest_version": 4,
    "description": "Theme themed after the Starfield game (some elements may differ from the game, as they are either copyrighted or cost money)",
    "version": "v0.3",
    "inject": { "CSS/colors.css": [ "QuickAccess", "SP", "MainMenu" ] },
    "tabs": {
        "All": [ "QuickAccess", "SP", "MainMenu" ]
    },
    "patches": {
        "Main Menu": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/mainmenu.css": ["All"] },
                "No": {}
            }
        },
        "Quick Access Menu": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/quickaccess.css": ["All"] },
                "No": {}
            }
        },
        "Home Screen": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/homescreen.css": ["All"] },
                "No": {}
            }
        },
        "Task Bar": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/taskbar.css": ["All"] },
                "No": {}
            }
        },
        "Additionals": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/additionals.css": ["All"] },
                "No": {}
            }
        },
        "Battery": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/battery.css": ["All"] },
                "No": {}
            }
        },
        "Blur": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/blur.css": ["All"] },
                "No": {}
            }
        },
        "Keyboard": {
            "type": "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/keyboard.css": ["All"] },
                "No": {}
            }
        },
        "Font":{
            "type": "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/font.css": ["All"] },
                "No": {}
            }
        }
    }
}