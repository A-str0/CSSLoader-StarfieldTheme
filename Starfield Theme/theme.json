{
    "name": "Starfield Theme",
    "author": "magesty_",
    "target": "System-Wide",
    "manifest_version": 4,
    "description": "Theme themed after the Starfield game (some elements may differ from the game, as they are either copyrighted or cost money)",
    "version": "v0.2",
    "inject": { "CSS/colors.css": [ "QuickAccess", "SP", "MainMenu" ] },
    "patches": {
        "Main Menu": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/mainmenu.css": ["MainMenu"] },
                "No": {}
            }
        },
        "Quick Access": {
            "type" : "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/mainmenu.css": [ "QuickAccess", "SP", "MainMenu" ] },
                "No": {}
            }
        },
        "Keyboard": {
            "type": "checkbox",
            "default": "Yes",
            "values": {
                "Yes": { "CSS/keyboard.css": [ "QuickAccess", "SP", "MainMenu" ] },
                "No": {}
            }
        },
        "Font":{
            "type": "checkbox",
            "default": "Yes",
            "values": {
                "Yes": {
                    "CSS/font.css": ["SP", "MainMenu", "QuickAccess"]
                },
                "No": {}
            }
        }
    }
}